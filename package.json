{
  "name": "react-template",
  "version": "1.0.0",
  "description": "Template for boolerplate react/redux single page webapps.",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf tmp && rm -rf dist && rm -rf reports",
    "prebuild": "npm run clean",
    "build": "webpack --config webpack.config.js",
    "prestart": "npm run clean",
    "start": "webpack-dev-server --config ./webpack.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlesbthomas/react-template.git"
  },
  "keywords": [
    "react",
    "remplate"
  ],
  "author": "contact@charliebthomas.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlesbthomas/react-template/issues"
  },
  "homepage": "https://github.com/charlesbthomas/react-template#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "file-loader": "^5.1.0",
    "happypack": "^5.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.5",
    "jest-junit": "^10.0.0",
    "json-loader": "^0.5.7",
    "nodemon": "^1.19.1",
    "path": "^0.12.7",
    "react-test-renderer": "^16.8.6",
    "style-loader": "^1.2.1",
    "svg-sprite-loader": "^4.2.7",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2",
    "webpack-notifier": "^1.8.0"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.webpack/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "client/js/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageDirectory": "reports/coverage",
    "moduleNameMapper": {
      "&/(.*)": "<rootDir>/src/$1"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/test-setup.js",
      "jest-extended"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports/tests"
  }
}
